{
   "$id":"api_v1_settings_endpoint",
   "$schema":"http://json-schema.org/draft-07/schema#",
   "title":"settings_endpoint",
   "type":"object",
   "properties":{
      "app_name":{
         "id":"app_name",
         "type":"string",
         "description":"The app name",
         "minLength":3,
         "maxLength":60
      },
      "app_url":{
         "id":"app_url",
         "type":"string",
         "format":"url",
         "description":"The app URL",
         "minLength":3,
         "maxLength":60
      },
      "app_email":{
         "id":"email",
         "type":"string",
         "format":"email",
         "description":"The app email",
         "minLength":3,
         "maxLength":60
      }
   },
   "required":[
      "app_name",
      "app_url",
      "app_email"
   ]
}
